<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <!-- Wallpaper shows through window background -->

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Custom BB Status Bar -->
        <com.meowgi.launcher710.ui.statusbar.BBStatusBar
            android:id="@+id/statusBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_height"
            android:background="@color/bb_overlay" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/bb_divider" />

        <!-- Header: date + clock -->
        <com.meowgi.launcher710.ui.header.HeaderView
            android:id="@+id/headerView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:background="@color/bb_overlay" />

        <!-- Action bar: sound profile + search -->
        <LinearLayout
            android:id="@+id/actionBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_height"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <ImageView
                android:id="@+id/btnSoundProfile"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_sound_normal"
                android:contentDescription="Sound Profile"
                android:scaleType="fitCenter"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:alpha="0.7" />

            <FrameLayout
                android:id="@+id/actionBarCenter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:clickable="true"
                android:focusable="true">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:id="@+id/notificationTickerBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:visibility="gone"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/notificationTickerText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/bb_text_secondary"
                        android:textSize="12sp"
                        android:fontFamily="@font/bbalphas" />

                    <TextView
                        android:id="@+id/notificationCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:background="@drawable/tab_active_bg"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:textColor="@color/bb_text_primary"
                        android:textSize="11sp"
                        android:fontFamily="@font/bbalphas" />
                </LinearLayout>

                <EditText
                    android:id="@+id/searchInputInBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:hint="@string/search_hint"
                    android:inputType="textNoSuggestions"
                    android:imeOptions="actionSearch"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:background="@drawable/search_bar_bg"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/bb_search_text"
                    android:textSize="12sp"
                    android:fontFamily="@font/bbalphas" />
            </FrameLayout>

            <ImageView
                android:id="@+id/btnSearch"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:src="@android:drawable/ic_menu_search"
                android:contentDescription="Search"
                android:scaleType="fitCenter"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/bb_divider" />

        <!-- Content area -->
        <FrameLayout
            android:id="@+id/contentArea"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/appPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.meowgi.launcher710.ui.notifications.NotificationHub
                android:id="@+id/notificationHub"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@color/bb_overlay_dark" />

            <com.meowgi.launcher710.ui.search.SearchOverlay
                android:id="@+id/searchOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/bb_divider" />

        <!-- Tab bar (static, not scrollable) -->
        <LinearLayout
            android:id="@+id/tabBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_bar_height"
            android:orientation="horizontal"
            android:background="@color/bb_overlay"
            android:gravity="center_vertical" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/bb_divider" />

        <!-- Dock -->
        <com.meowgi.launcher710.ui.dock.DockBar
            android:id="@+id/dockBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dock_height"
            android:background="@color/bb_dock_bg" />

    </LinearLayout>

</FrameLayout>
